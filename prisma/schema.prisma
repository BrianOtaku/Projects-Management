generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Hoặc mysql tùy DB
  url      = env("DATABASE_URL")
}

enum Role {
  MANAGER
  LEADER
  STAFF
}

enum Status {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  CANCELED
  PENDING
  OVERDUE
}

model User {
  id       BigInt  @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Role
  teamId   BigInt?
  team     Team?   @relation(fields: [teamId], references: [id])
  tasks    Task[]
  leader   Team[]  @relation("TeamLeader")
}

model Team {
  id       BigInt   @id @default(autoincrement())
  teamName String
  project  Project?
  members  User[]
  leaderId BigInt?
  leader   User?    @relation("TeamLeader", fields: [leaderId], references: [id])
}

model Project {
  id          BigInt    @id @default(autoincrement())
  title       String
  description String
  status      Status
  startDate   DateTime
  dueDate     DateTime
  completeAt  DateTime?

  progress Float

  canceled Boolean @default(false)
  submit   Boolean @default(false)
  accept   Boolean @default(false)

  teamId BigInt? @unique
  team   Team?   @relation(fields: [teamId], references: [id])
  tasks  Task[]
}

model Task {
  id          BigInt    @id @default(autoincrement())
  userId      BigInt
  projectId   BigInt
  title       String
  description String
  status      Status
  startDate   DateTime
  dueDate     DateTime
  completeAt  DateTime?

  canceled Boolean @default(false)
  submit   Boolean @default(false)
  accept   Boolean @default(false)

  user    User    @relation(fields: [userId], references: [id])
  project Project @relation(fields: [projectId], references: [id])
}
